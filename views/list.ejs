<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/main.css">
  </head>
  <body>
   
    <%- include('nav.html') %>
      <h4 class="ml-2 my-3 text-center">❌TODOLIST❌</h4>
      <div class="container">
        <ul class="list-group">
          <%posts.forEach(function(post) { %>
            <li class="list-group-item">
              
              <!-- <p>글번호 : <%=post._id%></p> -->
              
              <h4><a href="detail/<%=post._id%>">할일: <%=post.제목 %></a></h4>
              <p>마감날짜 : <%=post.날짜 %></p>
              <button class="delete btn btn-danger" data-id="<%=post._id%>">삭제</button>  
            </li>
            <%})%>
          </ul>
        </div>
          <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
          <script>
            $('.update').on('click',function(e){
              location.href="edit"
            });
            $('.delete').on('click',function(e){
              var 글번호 = e.target.dataset.id; // e.target 지금클릭한곳
              var 지금누른거 = $(this); // this 지금 이벤트동작하는곳
              $.ajax({
                method: 'DELETE',
            url: '/delete',
            data:  {_id: 글번호}

            }).done(function(결과){
              // 페이지를 강제로 새로고침
              // 삭제버튼을 누른 <li> 요소를 제거/안보이게
              console.log('성공');
              지금누른거.parent('li').fadeOut();
            }).fail(function(xhr,textStatus,errorThrown){
              console.log('실패');
            });

        });
       

      </script>
      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</body>
</html>